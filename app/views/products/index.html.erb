<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Colour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.colour %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>


<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= link_to product do %>
          <h1><%= product.name %></h1>
        <% end %>
        <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.blank? %>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <strong>$25</strong>
      </div>
    <% end %>
  </div>
</div>
